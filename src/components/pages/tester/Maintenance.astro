---
const message = "We'll be back soon!";
const subtext = "System maintenance in progress...";

const links = [
  { name: "Return Home", href: "/" },
  { name: "Contact", href: "mailto:malvin@example.com" },
];
---

<section
  class="flex min-h-screen flex-col items-center justify-center px-4 pt-20 text-center font-mono sm:pt-32"
>
  <div class="max-w-lg space-y-4">
    <h1 class="text-4xl font-bold text-yellow-400 sm:text-5xl">
      $ maintenance-mode
    </h1>
    <p class="text-secondary text-lg">{message}</p>
    <p class="text-secondary-dark text-sm">{subtext}</p>

    <div class="mt-6 flex flex-wrap justify-center gap-4">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="border border-yellow-400 px-4 py-2 text-sm text-yellow-300 transition-all hover:bg-yellow-400 hover:text-black sm:text-base"
          >
            {link.name}
          </a>
        ))
      }
    </div>
  </div>
</section>
