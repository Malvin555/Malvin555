---
const title = "Work in Progress";
const subtitle = "This page is under construction.";
const hint = "Check back soon or return to home.";
---

<section
  class="bg-terminal-pattern flex min-h-screen flex-col items-center justify-center px-4 pt-20 text-center font-mono sm:pt-32"
>
  <div class="max-w-lg space-y-4">
    <h1 class="text-4xl font-bold text-blue-400 sm:text-5xl">$ wip</h1>
    <p class="text-secondary text-lg">{title}</p>
    <p class="text-secondary-dark text-sm">{subtitle}</p>

    <div class="mt-6 flex justify-center">
      <a
        href="/"
        class="border border-blue-400 px-4 py-2 text-sm text-blue-300 transition-all hover:bg-blue-400 hover:text-black sm:text-base"
      >
        return to home
      </a>
    </div>
  </div>
</section>
